/* components/Dialog/dialog.wxss */
.wx-mask{
    position: fixed;
    z-index: 1000;
    top: 0;
    right: 0;
    left: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.3);
}
.wx-dialog{
    position: fixed;
    z-index: 5000;
    width: 80%;
    max-width: 600rpx;
    top: 50%;
    left: 50%;
    -webkit-transform: translate(-50%, -50%);
    transform: translate(-50%, -50%);
    background-color: #FFFFFF;
    text-align: center;
    border-radius: 3px;
    overflow: hidden;
}
.wx-dialog-title{
    font-size: 18px;
    padding: 15px 15px 5px;
}

.weui-cell__bd{
    text-align: left;
}
.weui-cells{
    display: initial;
}
.wx-dialog-content{
    padding: 15px 15px 5px;
    min-height: 40px;
    font-size: 16px;
    line-height: 1.3;
}
.wx-dialog-radio-group{
    display: flex;
    flex-direction: column;
}

.wx-dialog-radio{
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: space-between;
    padding: 20rpx;
    border-bottom: 1px solid #cecece;
}

.wx-dialog-radio:last-child{
    border: 0;
}

.wx-dialog-radio > view{
    -webkit-font-smoothing: subpixel-antialiased;
    font-weight: 400;
    font-size: 17px; 
    color: rgb(41, 41, 41);
}

