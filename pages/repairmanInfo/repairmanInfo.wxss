/* pages/repairmanInfo/repairmanInfo.wxss */

.page__bd{
    height: 92%;
    overflow-y: auto;
}

@media screen and (min-width: 700px) {
    .page__bd{
        height: 89%;
    }
}
.name{
    display: flex;
    align-items: center;
    justify-content: center;
}

.weui-cells__title{
    padding:10px 15px;
    text-align: center;
    margin-bottom: 0;
    background-color: #fff;
    font-size: 16px;
}

.head {
    display: flex;
    align-items: center;
    flex-direction: column;
    justify-content: center;
    width: 100%;
    height: 400rpx;
    background-color: #fff;
  }

.head > view{
    padding: 10px 15px;
  }

.address{
    width: 90%;
    overflow: hidden;
    word-break: normal;
    text-overflow: ellipsis; 
    text-align: center;
}

.head > view.head-img {
    display: block;
    width: 128rpx;
    height: 128rpx;
    border-radius: 50%;
    padding: 0;
    overflow: hidden;
}