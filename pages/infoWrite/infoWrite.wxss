.periplast{
    position:relative;
    display:-webkit-box;
    display:-webkit-flex;
    display:flex;
    -webkit-box-align:center;
    -webkit-align-items:center;
    align-items:center;

}

.weui-cell__bd .weui-cell-text{
    width: 500rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}

.radio-group .weui-cell__bd > view:nth-child(2),
.radio-group .weui-cell__bd{
    display: flex;
    
}

.radio-group .weui-cell__bd > view:nth-child(2){
    justify-content: space-around;
    flex: 1;
}
